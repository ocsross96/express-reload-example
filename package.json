{
  "name": "express-reload-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "node server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "node-sass -w client/sass/style.scss --output-style compressed -o build client/sass/style.scss",
    "build:js": "browserify -o ./build/bundle.js client/js/index.js",
    "watchify": "watchify client/js/index.js -o ./build/bundle.js",
    "dev": "npm run sass && npm run watchify && nodemon ./bin/www ./server/index.js --w build server",
    "livereload": "live-reload server build --port 9091",
    "practice": "nodemon ./server/index.js -e njk,css,js --watch build --watch server --watch client",
    "watch": "nodemon ./server/index.js -e njk,css,js --watch build --watch server",
    "all": "parallelshell 'npm run build:css' 'npm run watchify' 'npm run watch' 'npm run livereload'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browserify": "^14.3.0",
    "express": "^4.15.2",
    "live-reload": "^1.1.0",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "nunjucks": "^3.0.0",
    "parallelshell": "^2.0.0",
    "watchify": "^3.9.0"
  },
  "devDependencies": {}
}
